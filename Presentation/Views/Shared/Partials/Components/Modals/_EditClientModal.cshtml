@model EditClientModel

<div id="editClientModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Client</h3>
            <button type="button" class="button-close" data-close="true"></button>
        </div>

        <form method="post" asp-controller="Client" asp-action="EditClient" class="js-form" novalidate>

            <input asp-for="Id" readonly type="hidden" />

            <div id="image-preview-edit-client-modal-container" class="image-preview-container circle">
                <input type="hidden" asp-for="ExistingImage" class="form-input" />
                <img src="#" id="image-preview-edit-client-modal" class="image-preview d-none " />
                <input asp-for="ClientImage" accept="image/*" class="d-none" />
            </div>

            <div class="form-group">
                <label asp-for="ClientName" class="form-label"></label>
                <div class="field-group">
                    <input asp-for="ClientName" class="form-input" />
                    <span asp-validation-for="ClientName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <div class="field-group">
                    <input asp-for="Email" class="form-input" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="form-label"></label>
                <div class="field-group">
                    <input asp-for="Location" class="form-input" />
                    <span asp-validation-for="Location"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="form-label"></label>
                <div class="field-group">
                    <input asp-for="Phone" class="form-input" />
                    <span asp-validation-for="Phone"></span>
                </div>
            </div>

            <div class="error-message"></div>

            <button type="submit" class="button btn-blue mt-4">Save</button>
		</form>
	</div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        
        handleImagePreview({
            containerId: 'image-preview-edit-client-modal-container',
            imagePreview: 'image-preview-edit-client-modal'
        })
    })
</script>