<div id="deleteClientModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Delete Client</h3>
            <button type="button" class="button-close" data-close="true"></button>
        </div>

        <form method="post" asp-controller="Client" asp-action="DeleteClient" class="js-form delete-modal" novalidate onsubmit="return false">

            <input name="id" id="delete-client-id" readonly type="hidden" />
            <p class="p-1">Are you sure you want to delete the client <strong id="delete-client-name"></strong>?</p>

            <div class="error-message p-l-r-1"></div>
   
            <div class="flex">
                <button type="submit" class="button btn-red mt-4">Delete</button>
                <button type="button" class="button btn-dark-gray mt-4" data-close="true">Cancel</button>
            </div>

        </form>
    </div>
</div>