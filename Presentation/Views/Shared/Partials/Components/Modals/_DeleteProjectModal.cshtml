<div id="deleteProjectModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Delete Project</h3>
            <button type="button" class="button-close" data-close="true"></button>
        </div>

        <form method="post" asp-controller="Projects" asp-action="DeleteProject" class="js-form" novalidate>

            <input name="id" id="delete-project-id" readonly type="hidden" />
            <p>Are you sure you want to delete the project <strong id="delete-project-name"></strong>?</p>
            <p id="delete-project-name"></p>

            <div id="error-message" class="error-message"></div>

            <div class="flex">
                <button type="submit" class="button btn-red mt-4">Delete</button>
                <button type="button" class="button mt-4" data-close="true">Cancel</button>
            </div>

        </form>
    </div>
</div>