@model EditProjectModel

<div id="editProjectModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Project</h3>
            <button type="button" class="button-close" data-close="true"></button>
        </div>

        <form class="project-form-container" method="post" asp-controller="Projects" asp-action="EditProject" enctype="multipart/form-data" novalidate>

            @* <div class="image-preview-container pt-1"> *@
            @*     <label asp-for="ProjectImage" id="circle-container" class="square"> *@
            @*         <i class="fa-duotone fa-solid fa-circle-camera fa-2xl" style="--fa-primary-color: #93a0b4; --fa-primary-opacity: 0.4; --fa-secondary-color: #6a707c; --fa-secondary-opacity: 1;"></i> *@
            @*     </label> *@

            @*     <img id="image-preview" src="#" alt="Project image" class="d-none" /> *@
            @* </div> *@

            @* <input asp-for="ProjectImage" accept="image/*" class="d-none" /> *@


            <div class="image-preview-container square">
                <img id="image-preview" src="#" class="d-none" />
                <input asp-for="ProjectImage" accept="image/*" class="d-none" />
            </div>

            <div class="form-group">
                <label asp-for="ProjectName"></label>
                <div class="field-group">
                    <input asp-for="ProjectName" />
                    <span asp-validation-for="ProjectName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SelectedClientId"></label>
                <select asp-for="SelectedClientId" asp-items="@Model.Clients" required>
                    <option value="" class="form-input" disabled selected></option>
                </select>
                <span asp-validation-for="SelectedClientId"></span>
            </div>


            <div class="form-group">
                <label asp-for="Description"></label>
                <div class="field-group">
                    <input asp-for="Description" />
                    <span asp-validation-for="Description"></span>
                </div>
            </div>

            <div class="flex mt-4">
                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <div class="field-group">
                        <input asp-for="StartDate" />
                        <span asp-validation-for="StartDate"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate"></label>
                    <div class="field-group">
                        <input asp-for="EndDate" />
                        <span asp-validation-for="EndDate"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="SelectedMemberId"></label>
                <select asp-for="SelectedMemberId" asp-items="@Model?.Members" required multiple>
                    <option value="" class="form-input" disabled selected></option>
                </select>
                <span asp-validation-for="SelectedMemberId"></span>
            </div>

            @* <div class="grid mt-4"> *@
            @*     <select asp-for="AddProjectModel.Member" asp-items="@Model?.Members" class="form-input"> *@
            @*         <option value="" disabled></option> *@
            @*     </select> *@
            @*     <span asp-validation-for="AddProjectModel.Member"></span> *@
            @* </div> *@

            <div class="form-group">
                <label asp-for="Budget"></label>
                <div class="field-group budget-input-wrapper">
                    <input asp-for="Budget" class="budget-input" />
                    <span asp-validation-for="Budget"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SelectedStatusId"></label>
                <select asp-for="SelectedStatusId" asp-items="@Model.Statuses" required>
                    <option value="" class="form-input" disabled selected></option>
                </select>
                <span asp-validation-for="SelectedStatusId"></span>
            </div>

            <button type="submit" class="button btn-blue mt-4">Create</button>
        </form>
    </div>
</div>


@await Html.PartialAsync("_ValidationScripts")