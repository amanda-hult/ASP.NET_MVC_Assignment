@model EditClientModel

<div id="editClientModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Client</h3>
            <button type="button" class="button-close" data-close="true"></button>
        </div>

        <form method="post" asp-controller="Client" asp-action="EditClient" class="js-form" novalidate>

            <input asp-for="Id" readonly type="hidden" />

            <div class="image-preview-container circle">
                <img src="#" class="image-preview d-none" />
                <input asp-for="ClientImage" accept="image/*" class="d-none" />

            </div>


            <div class="form-group">
                <label asp-for="ClientName"></label>
                <div class="field-group">
                    <input asp-for="ClientName" />
                    <span asp-validation-for="ClientName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Location"></label>
                <div class="field-group">
                    <input asp-for="Location" />
                    <span asp-validation-for="Location"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="field-group">
                    <input asp-for="Phone" />
                    <span asp-validation-for="Phone"></span>
                </div>
            </div>

            <div id="error-message" class="error-message"></div>

            <button type="submit" class="button btn-blue mt-4">Save</button>
		</form>
	</div>
</div>

