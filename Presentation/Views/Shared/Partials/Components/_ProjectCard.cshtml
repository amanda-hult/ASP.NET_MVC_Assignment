@model ProjectModel

<div class="card">

    <div class="project-card-header">

        <div>
            <img src="@Model.ProjectImageUrl" alt="Project logo">
        </div>

        <div>
            <h6>@Model.ProjectName</h6>
            <p>@Model.Client.ClientName</p>
        </div>


        <a><i class="fa-duotone fa-solid fa-colon fa-rotate-90 cursor" style="--fa-secondary-opacity: 1;" data-modal="true" data-target="#editProjectModal"></i></a>

    </div>

    <div>
        <p>@Model.Description</p>
    </div>

    <div class="project-card-footer">
        <div class="time-wrapper @(Model.DaysLeft < 6 ? "error" : "normal")">
            <i class="fa-duotone fa-solid fa-clock"></i>
            @if (Model.DaysLeft < 1)
            {
                <p>Already ended</p>
            }
            else if (Model.DaysLeft == 1)
            {
                <p>1 day left</p>
            }
            else if (Model.DaysLeft < 7)
            {
                <p>@Model.DaysLeft days left</p>
            }
            else {
                var weeks = Math.Ceiling(Model.DaysLeft.Value / 7.0);
                <p>@weeks week@(weeks > 1 ? "s" : "") left</p>
            }
        </div>

        <img src="~/images/avatar-standard.svg">
    </div>

</div>