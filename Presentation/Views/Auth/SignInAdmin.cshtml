@model SignInViewModel

@{
    Layout = "_AuthLayout";

    ViewData["Title"] = "Admin Panel - " + Model.Title;
}

<div class="admin-wrapper">

    <div class="background-blur-wrapper">
        <div class="background-blur"></div>
    </div>

    <div class="admin-login-sidebar">
        <h1>Welcome to<span><br>Admin Panel</span></h1>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus ullamcorper nisl erat, vel convallis elit fermentum pellentesque. Sed mollis velit facilisis facilisis viverra.</p>
    </div>

    <div class ="admin-login-wrapper">

        <div class="admin-login-container" id="signin">
            <h1 class="text-center">Login</h1>

            <form class="form" method="post" asp-controller="Auth" asp-action="SignInExternal" novalidate>
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                <input type="hidden" name="provider" value="Google" />
                <button type="submit" class="mt-3 button btn-gray">
                    <img src="~/images/google-icon.svg" alt="Google" />
                    <p class="flex-grow">Login with Google</p>
                </button>
            </form>

            <form method="post" asp-controller="Auth" asp-action="SignInAdmin" class="form-container" novalidate>
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                <div class="flex mt-4">
                    <div class="divider"></div>
                    <p class="text-center">OR</p>
                    <div class="divider"></div>
                </div>

                <div class="grid mt-4">
                    <label asp-for="Form.Email" class="form-label"></label>
                    <input asp-for="Form.Email" class="form-input" value="@Model?.Form?.Email" />
                </div>

                <div class="grid mt-4">
                    <label asp-for="Form.Password" class="form-label"></label>
                    <input asp-for="Form.Password" class="form-input" value="@Model?.Form?.Password" />
                </div>

                <div class="flex-space-between mt-4">
                    <div class="flex">
                        <input type="checkbox">
                        <p>Remember me</p>
                    </div>
                    <div>
                        <a>Forgot Password?</a>
                    </div>

                </div>

                @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
                {
                    <div class="error mt-4">
                        @ViewBag?.ErrorMessage
                    </div>
                }

                <button type="submit" class="button btn-blue mt-4">Log In</button>
            </form>
        </div>
    </div>
</div>