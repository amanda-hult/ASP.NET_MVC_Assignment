@model SignInViewModel

@{
	Layout = "_AuthLayout";

	ViewData["Title"] = Model.Title;
}

<div class="center-screen">
    <div class="surface-35 flex-column" id="signin">
        <h1 class="text-center">Login</h1>

        <form class="form" method="post" asp-controller="Auth" asp-action="SignInExternal" novalidate>
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            <input type="hidden" name="provider" value="Google" />
            <button type="submit" class="mt-3 button btn-gray">
                <img src="~/images/google-icon.svg" alt="Google" />
                <p class="flex-grow">Login with Google</p>
            </button>
        </form>

        <form method="post" asp-controller="Auth" asp-action="SignIn" class="form-container" novalidate>
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            <div class="flex mt-4">
                <div class="divider"></div>
                <p class="text-center">OR</p>
                <div class="divider"></div>
            </div>

            <div class="grid mt-4">
                <label asp-for="Form.Email" class="form-label"></label>
                <input asp-for="Form.Email" class="form-input" value="@Model?.Form?.Email" />
            </div>

            <div class="grid mt-4">
                <label asp-for="Form.Password" class="form-label"></label>
                <input asp-for="Form.Password" class="form-input" value="@Model?.Form?.Password" />
            </div>

            <div class="flex-space-between mt-4">
                <div class="flex">
                    <input type="checkbox">
                    <p>Remember me</p>
                </div>
                <div>
                    <a>Forgot Password?</a>
                </div>

            </div>

            @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
            {
                <div class="error mt-4">
                    @ViewBag?.ErrorMessage
                </div>
            }

            <button type="submit" class="button btn-blue mt-2">Log In</button>

            <p class="mt-5 text-center">Don't have an account?<a asp-asp-controller="Auth" asp-action="SignUp"> Sign Up</a></p>
        </form>
    </div>
</div>