@model SignInViewModel

@{
	Layout = "_AuthLayout";

	ViewData["Title"] = Model.Title;
}

<div class="surface-35" id="signin">
    <h1 class="text-center">Login</h1>

    <form method="post" asp-controller="Auth" asp-action="SignInExternal" novalidate>
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <button type="submit" name="provider" value="Google" class="mt-3 button btn-gray">
            <img src="images/google-icon.svg" alt="Google" />
            <p class="flex-grow">Login with Google</p>
        </button>
    </form>

    <form method="post" asp-controller="Auth" asp-action="SignIn" class="form-container" novalidate>
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />


        <p class="mt-4">OR</p>

        <div class="grid mt-4">
            <label asp-for="Form.Email"></label>
            <input asp-for="Form.Email" class="form-input" value="@Model?.Form?.Email" />
            <span asp-validation-for="Form.Email"></span>
        </div>

        <div class="grid mt-4">
            <label asp-for="Form.Password"></label>
            <input asp-for="Form.Password" class="form-input" value="@Model?.Form?.Password" />
            <span asp-validation-for="Form.Password"></span>
        </div>

        <div class="flex mt-2">
            <input type="checkbox">
            <p>Remember me</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div>
                @ViewBag?.ErrorMessage
            </div>
        }

        <button type="submit" class="button btn-blue mt-4">Log In</button>

        <p class="mt-5 text-center">Don't have an account?<a asp-asp-controller="Auth" asp-action="SignUp">Sign Up</a></p>
    </form>
</div>

