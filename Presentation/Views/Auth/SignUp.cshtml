@model SignUpViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = Model.Title;
}

<div class="surface-35">
	<form method="post" asp-controller="Auth" asp-action="SignUp" class="form-container" novalidate>
        <h1 class="text-center">Create Account</h1>

        <a class="mt-3 button btn-gray">
            <img src="images/google-icon.svg" alt="Google" />
            <p class="flex-grow">Sign Up with Google</p>
        </a>

        <p class="mt-4">OR</p>

        <div class="grid mt-4">
            <label asp-for="Form.FirstName"></label>
            <input asp-for="Form.FirstName" class="form-input" value="@Model?.Form?.FirstName" />
            <span asp-validation-for="Form.FirstName"></span>
        </div>

        <div class="grid mt-4">
            <label asp-for="Form.LastName"></label>
            <input asp-for="Form.LastName" class="form-input" value="@Model?.Form?.LastName" />
            <span asp-validation-for="Form.LastName"></span>
        </div>

        <div class="grid mt-4">
            <label asp-for="Form.Email"></label>
            <input asp-for="Form.Email" class="form-input" value="@Model?.Form?.Email" />
            <span asp-validation-for="Form.Email"></span>
        </div>

        <div class="grid mt-4">
            <label asp-for="Form.Password"></label>
            <input asp-for="Form.Password" class="form-input" value="@Model?.Form?.Password" />
            <span asp-validation-for="Form.Password"></span>
        </div>

        <div class="grid mt-4">
            <label asp-for="Form.ConfirmPassword"></label>
            <input asp-for="Form.ConfirmPassword" class="form-input" value="@Model?.Form?.ConfirmPassword" />
            <span asp-validation-for="Form.ConfirmPassword"></span>
        </div>


        <div class="flex mt-2">
            <input type="checkbox">
            <p>I accept Terms and Conditions</p>
        </div>


        <button type="submit" class="button btn-blue mt-4">Create Account</button>

        <p class="mt-5 text-center">Already have an account?<a asp-controller="Auth" asp-action="SignIn">Login</a></p>
	</form>
</div>

@await Html.PartialAsync("_ValidationScripts")